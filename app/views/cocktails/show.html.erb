<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %></li>
    <%= link_to "Delete #{dose.description} - #{dose.ingredient.name}",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>


<%= link_to 'Add new doses',  new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Back',  cocktails_path(@cocktail) %>

